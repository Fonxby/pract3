<Window x:Class="zadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadanie1"
        mc:Ignorable="d"
        Title="zadanie1" Height="300" Width="400" Background="PapayaWhip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="задать число:" Margin="0,10,10,10"/>
        <TextBox x:Name="chislo" Grid.Row="0" Grid.Column="1" Margin="12"/>
        <Label Content="Ответ:" Margin="10,10,0,10" Grid.Column="0" Grid.Row="1"/>
        <TextBox x:Name="otvet" Grid.Row="1" Grid.Column="1"  Margin="12"/>
        <Button  x:Name="knopka" Content="ок" Grid.Column="1" Grid.Row="2" Margin="35,12" Click="knopka_Click"/>
    </Grid>
</Window>
